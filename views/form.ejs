<%- include("template/header") %> 
<body>
	<div class="alert alert-warning alert-dismissible">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<strong>Advertencia!</strong> Pronto se podrá Iniciar sesión por la web. Sólo se puede cambiar la constraseña.
	  </div>
	
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="/img/logo-circle.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form action="/auth/forgot-password" method="POST">
						<div class="input-group mb-3">
							<% if (alert) { %>
								<div class="alert alert-danger" role="alert">
									<%= alert %>
								  </div>
							  <% } %>
							<p>Por favor introduza su correo electrónico para poder reestablecer su contraseña.</p>
							<div class="input-group-append">
								<span class="input-group-text"><i class="far fa-envelope fa-2x"></i></span>
							</div>
							<input type="email" name="email" class="form-control input_user" value="" placeholder="email" required>
						</div>
							<div class="d-flex justify-content-center mt-3 login_container">
				 	<button type="submit" name="" class="btn login_btn">Aceptar</button>
				   </div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script src="/lib/jquery/jquery.min.js"></script>
	<script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>