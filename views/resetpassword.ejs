<%- include("template/header") %> 
<body>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="/img/logo-circle.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form action="/auth/resetpassword/<%= token %>" method="POST">
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input id="myInput" type="password" name="newPassword" class="form-control input_user" value="" placeholder="Nueva Constraseña">
							
						</div>
						<input type="checkbox" onclick="myFunction()"> Mostrar constraseña
							<div class="d-flex justify-content-center mt-3 login_container">
				 	<button type="submit" name="" class="btn login_btn">Enviar</button>
				   </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
<script>
	function myFunction() {
	  var x = document.getElementById("myInput");
	  if (x.type === "password") {
		x.type = "text";
	  } else {
		x.type = "password";
	  }
	}
	</script>
</html>